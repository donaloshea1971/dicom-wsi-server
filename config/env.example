# =============================================================================
# PathView Pro - Environment Configuration
# =============================================================================
# SECURITY WARNING: Copy this file to .env in the project root and change ALL default values!
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Credentials
# -----------------------------------------------------------------------------
POSTGRES_DB=orthanc
POSTGRES_USER=orthanc
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# Orthanc DICOM Server Credentials
# -----------------------------------------------------------------------------
ORTHANC_USERNAME=admin
ORTHANC_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# Auth0 Configuration (from your Auth0 Dashboard)
# -----------------------------------------------------------------------------
AUTH0_DOMAIN=dev-jkm887wawwxknno6.us.auth0.com
AUTH0_AUDIENCE=https://pathviewpro.com/api
AUTH0_CLIENT_ID=oORvvnuGhZ9365zxTrZNY33jnoSm9wr3

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Public URL of your deployment (used for CORS, callbacks)
PUBLIC_URL=https://pathviewpro.com

# Maximum upload size in GB
MAX_UPLOAD_SIZE_GB=20

# -----------------------------------------------------------------------------
# TLS/SSL Configuration (for production)
# -----------------------------------------------------------------------------
# Set to 'true' to enable HTTPS with Let's Encrypt
ENABLE_TLS=false
# Domain for SSL certificate (required if ENABLE_TLS=true)
SSL_DOMAIN=pathviewpro.com
# Email for Let's Encrypt notifications
SSL_EMAIL=admin@pathviewpro.com

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=https://pathviewpro.com

# Session secret (for future session-based auth)
SESSION_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET

# -----------------------------------------------------------------------------
# Dev/Test Auth Bypass (DISABLED by default)
# -----------------------------------------------------------------------------
# When enabled, backend accepts a shared-secret header for auth:
#   X-Auth-Bypass: <AUTH_BYPASS_SECRET>
# Use ONLY for local dev / automated testing / evaluation. Never enable in production.
AUTH_BYPASS_ENABLED=false
AUTH_BYPASS_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET
# Optional: restrict which client hosts can use bypass. Use '*' to allow all.
AUTH_BYPASS_ALLOWLIST=127.0.0.1,::1,localhost
# Optional: identity used for bypass-created user
AUTH_BYPASS_EMAIL=evaluator@local
AUTH_BYPASS_NAME=Bypass Evaluator
# Optional: role for bypass user ('user' or 'admin')
AUTH_BYPASS_ROLE=user

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379
# Optional: Redis password (uncomment and set if Redis auth is enabled)
# REDIS_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
